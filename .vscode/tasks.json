{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "problemMatcher": ["$eslint-stylish"],
      "label": "ESLint: lint workspace folder",
      "script": "lint",
      "presentation": { "reveal": "never", "panel": "new" },
      "runOptions": { "runOn": "folderOpen" },
      "detail": "Run ESLint for all files in the workspace folder",
      "options": { "configFile": ".eslintrc.cjs" }
    }
  ]
}
